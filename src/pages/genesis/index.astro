---
import Layout from '../../layouts/Layout.astro';
import { getAllChapterNums, loadChapter } from '../../data/tcr';

// Build a lightweight chapter index (num + verse count + first verse snippet)
const chapters = getAllChapterNums().map((n) => {
  const ch = loadChapter(n);
  return {
    num: n,
    verseCount: ch.verses.length,
    preview: ch.verses[0]?.rendering?.slice(0, 90) + '…',
  };
});
---

<Layout
  title="Genesis"
  description="Browse all 50 chapters of Genesis in The Covenant Rendering — modern English from the Hebrew (WLC) with translator notes and key terms."
  canonical="/genesis"
>
  <!-- Page header -->
  <div class="bg-gradient-to-b from-cream-100 to-cream-50 border-b border-cream-200">
    <div class="max-w-4xl mx-auto px-6 py-16">
      <p class="text-xs font-semibold uppercase tracking-widest text-teal-600 mb-3">The Covenant Rendering</p>
      <h1 class="font-serif text-4xl font-medium text-stone-800 mb-4">Genesis</h1>
      <p class="text-stone-500 text-lg font-serif italic">
        בְּרֵאשִׁית &mdash; <em>Bereshit</em> &middot; "In the beginning"
      </p>
      <div class="flex items-center gap-4 mt-6 text-sm text-stone-600">
        <span>50 chapters</span>
        <span class="text-stone-300">&bull;</span>
        <span>1,534 verses</span>
        <span class="text-stone-300">&bull;</span>
        <span>Translated from the Westminster Leningrad Codex</span>
      </div>
    </div>
  </div>

  <!-- Chapter grid -->
  <div class="max-w-4xl mx-auto px-6 py-14">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {chapters.map(({ num, verseCount, preview }) => (
        <a
          href={`/genesis/${num}`}
          class="group p-5 bg-white rounded-xl border border-cream-200 shadow-sm hover:border-teal-200 hover:shadow-md transition-all"
        >
          <div class="flex items-center justify-between mb-3">
            <span class="text-xs font-semibold uppercase tracking-wider text-teal-600">
              Chapter {num}
            </span>
            <span class="text-xs text-stone-500">{verseCount} verses</span>
          </div>
          <p class="text-sm text-stone-600 leading-relaxed font-serif italic line-clamp-3">
            {preview}
          </p>
          <div class="mt-4 text-xs font-medium text-teal-600 group-hover:text-teal-700 transition-colors flex items-center gap-1">
            Read chapter {num}
            <svg class="w-3 h-3 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>
